
@{
    ViewBag.Title = "Localizar";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/Content/Estilos.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <title></title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <main>
        <div class="abajo">
            <span> Nombre </span>
            <input class="mover" type="text" name="Nombretxt" id="Nombretxt"  />
            <span> Apellido</span>
            <input class="mover" type="text" name="Apellidotxt" id="Apellidotxt" />
            <span> Rut </span>
            <input class="mover"  type="text" name="Ruttxt" id="Ruttxt" />
        </div>
        <div style="padding-top:15px">
            <input type="submit" name="name" value="Buscar" class="btn btn-success" />
        </div>
        <div class="abajo">
            <table class="table" border="1" cellpadding="1" cellspacing="1">
                <thead>
                    <tr>
                        <td>Rut</td>
                        <td> Nombre</td>
                        <td> Apellido</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null)
                    {
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                }
                else
                {
                    foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.Rut</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td><a href="/Personas/Documento">ingresar documento</a></td>
                        </tr>
                    }
                    
                }

                    </tbody>
                </table>

        </div>
     

       
    </main>
    }
    </body>

</html>
    